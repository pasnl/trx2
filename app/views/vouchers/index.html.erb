<%= render partial: '/layouts/subheader', locals: {title: "Alle vouchers"} %>

<table>
  <thead>
    <tr>
      <th>Gebruiker</th>
      <th>Aangemaakt op</th>
      <th>Geldig tot</th>
      <th>Verzilverd</th>
      <th>Waarde</th>
      <th>Titel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.user_id %></td>
        <td><%= voucher.created_at%></td>
        <td><%= voucher.valid_date %></td>
        <td><%= voucher.cash_date %></td>
        <td><%= voucher.cash_value %></td>
        <td><%= voucher.title%></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Voucher', new_voucher_path %>
